<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/avatar2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/readVanishNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:textColor="#ff5496eb"
                android:textSize="12sp"
                android:visibility="gone" />

            <io.crim.android.ouiconversation.widget.SendStateView
                android:id="@+id/sendState2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/content2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nickName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#ff666666"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <io.crim.android.ouicore.widget.InterceptLinearLayout
                    android:id="@+id/content2"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_gray_shape_18"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="12dp">

                    <io.crim.android.ouicore.widget.AvatarImage
                        android:id="@+id/otherAvatar2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_my_friend" />

                    <TextView
                        android:id="@+id/cardNickName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:ellipsize="end"
                        android:maxWidth="100dp"
                        android:maxLines="1"
                        android:textColor="#ff333333"
                        android:textSize="16sp" />

                </io.crim.android.ouicore.widget.InterceptLinearLayout>
            </LinearLayout>


        </LinearLayout>


        <io.crim.android.ouicore.widget.AvatarImage
            android:id="@+id/avatar2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_my_friend" />

    </RelativeLayout>
</FrameLayout>
